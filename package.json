{
  "name": "MiniHtmlExtractPlugin",
  "version": "0.1.0",
  "description": "Generate HTML wrapper file(s) for specific entry file(s).",
  "main": "./dist/index",
  "scripts": {
    "start": "run-s build:production",
    "build:development": "webpack --mode development",
    "build:production": "webpack --mode production",
    "test": "run-s build:production test:build test:mocha",
    "test:build": "rm -rf ./build && mkdir ./build && webpack --mode development --config webpack.config.test.js",
    "test:mocha": "mocha -r ts-node/register test/**/*.spec.ts"
  },
  "author": "luics.xu@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "@types/assert": "^1.5.1",
    "@types/loader-utils": "^2.0.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.13",
    "@types/react": "^16.9.36",
    "@types/react-dom": "^16.9.8",
    "@types/webpack": "^4.41.18",
    "mocha": "^8.0.1",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "raw-loader": "^4.0.1",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  }
}